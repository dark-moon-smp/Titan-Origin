{
    "name": "Your Average Skyscraper",
    "description": "You are 8 times the size of a regular player.",
    "type": "origins:action_on_callback",
    "entity_action_chosen": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set 8 @s"
            }
        ]
    },
    "execute_chosen_when_orb": true,
    "entity_action_lost": {
        "type": "origins:execute_command",
        "command": "scale reset @s"
    },
    "entity_action_added": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set 8 @s"
            }
        ]
    },
    "entity_action_removed": {
        "type": "origins:execute_command",
        "command": "scale reset @s"
    },
    "entity_action_respawned": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set 8 @s"
            }
        ]
    }
}